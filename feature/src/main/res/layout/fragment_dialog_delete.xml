<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_dialog_invitation_code"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape_gray_fill_8_rect"
            android:backgroundTint="@color/white0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="306:343"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_dialog_leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:src="@drawable/ic_dialog_leave_meet_up"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_dialog_invitation_code" />

        <TextView
            android:id="@+id/tv_leave_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:text="@string/tv_leave_question"
            android:textAppearance="@style/TextAppearance.Kkumul.body_01"
            app:layout_constraintEnd_toEndOf="@id/iv_dialog_invitation_code"
            app:layout_constraintStart_toStartOf="@id/iv_dialog_invitation_code"
            app:layout_constraintTop_toBottomOf="@id/iv_dialog_leave" />

        <TextView
            android:id="@+id/tv_leave_question_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/tv_leave_question_description"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Kkumul.body_06"
            android:textColor="@color/gray6"
            app:layout_constraintEnd_toEndOf="@id/iv_dialog_invitation_code"
            app:layout_constraintStart_toStartOf="@id/iv_dialog_invitation_code"
            app:layout_constraintTop_toBottomOf="@id/tv_leave_question" />

        <TextView
            android:id="@+id/tv_btn_leave"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/shape_gray_fill_8_rect"
            android:backgroundTint="@color/gray1"
            android:gravity="center"
            android:paddingHorizontal="48dp"
            android:paddingVertical="12dp"
            android:text="@string/tv_btn_leave"
            android:textAlignment="center"
            android:textColor="@color/gray8"
            app:layout_constraintBottom_toBottomOf="@id/iv_dialog_invitation_code"
            app:layout_constraintDimensionRatio="155:52"
            app:layout_constraintEnd_toStartOf="@id/tv_btn_cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_leave_question_description"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tv_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/shape_gray_fill_8_rect"
            android:backgroundTint="@color/gray7"
            android:gravity="center"
            android:paddingHorizontal="55dp"
            android:paddingVertical="12dp"
            android:text="@string/tv_btn_cancel"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Kkumul.body_03"
            android:textColor="@color/white0"
            app:layout_constraintBottom_toBottomOf="@id/tv_btn_leave"
            app:layout_constraintDimensionRatio="155:52"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_btn_leave"
            app:layout_constraintTop_toTopOf="@id/tv_btn_leave" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
