<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_add_my_group_complete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green1">

        <include
            android:id="@+id/tb_add_my_group"
            layout="@layout/view_toolbar"
            app:title="@{@string/add_my_group_title}" />

        <ImageView
            android:id="@+id/iv_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="189dp"
            android:src="@drawable/ic_add_my_group_complete_character"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tb_add_my_group" />

        <TextView
            android:id="@+id/tv_add_my_group_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/tv_add_my_group_complete"
            android:textAppearance="@style/TextAppearance.Kkumul.head_01"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_character" />

        <TextView
            android:id="@+id/tv_add_my_group_complete_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_add_my_group_complete_description"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Kkumul.body_06"
            android:textColor="@color/gray6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_add_my_group_complete"
            android:layout_marginTop="14dp" />

        <Button
            android:id="@+id/btn_okay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="14dp"
            app:layout_constraintDimensionRatio="332:50"
            android:layout_marginBottom="50dp"
            android:background="@drawable/shape_gray_fill_8_rect"
            android:backgroundTint="@color/main_color"
            android:text="@string/okay"
            android:textAppearance="@style/TextAppearance.Kkumul.body_03"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>